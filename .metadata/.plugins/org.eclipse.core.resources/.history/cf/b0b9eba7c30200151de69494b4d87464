package carcompany;

import java.util.ArrayList;
import java.util.List;

public class Factory {
	List<Car> carList = new ArrayList<Car>();

	public void make(String name, int number) {

		for (int i = 0; i < number; i++) {
			if (name == "sonata") {
				Sonata s = new Sonata();
				carList.add(s);
			}
			
			if (name == "genesis") {
				Genesis g = new Genesis();
				carList.add(g);
			}
			
			if (name == "grandeur") {
				Grandeur gr = new Grandeur();
				carList.add(gr);
			}
		}
	}

	@Override
	public String toString() {
		return "Factory [carList=" + carList + "]";
	}

	public List<Car> getCarList() {
		return carList;
	}
	

}
